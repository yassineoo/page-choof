{
  "scripts": {
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:js\" \"npm run serve\"",
    "dev:css": "tailwindcss -i src/css/main.css -o public/dist/output.css --watch",
    "dev:js": "webpack --mode development --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i src/css/main.css -o public/dist/output.css --minify",
    "build:js": "webpack --mode production",
    "serve": "live-server public --port=3000"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.1",
    "cssnano": "^6.0.1",
    "html-loader": "^5.1.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^12.0.1",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.100.1",
    "webpack-cli": "^5.1.4"
  }
}
